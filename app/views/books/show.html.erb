<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'list', user: @user %>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <label for="book_title">Title</label>
          <div class="form-group">
            <%= f.text_field :title %>
          </div>
          <label for="book_opinion">Opinion</label>
          <div class="form-group">
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                 <%= image_tag @book.user.get_profile_image(40,40) %><br>
                 <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to edit_book_path(@book), class: "btn btn-sm btn-success" do %>
                    Edit
                  <% end %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to book_path(@book), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" do %>
                    Destroy
                  <% end %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>


    </div>
  </div>
</main>