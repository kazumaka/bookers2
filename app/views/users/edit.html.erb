<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user do |f| %>
          <label for="user_name">Name</label>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control name", id: "user_name", autofocus: true %>
          </div>
          <label for="user_image">Image</label>
          <div class="form-group">
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image", id: "user_profile_image" %>
          </div>
          <label for="user_introduction">Introduction</label>
          <div class="form-group">
            <%= f.text_area :introduction,class: "form-control user_introduction", id: "user_introduction"  %>
          </div>
          <div class="form-group">
            <%= f.submit :"Update User", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>